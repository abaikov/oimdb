{
  "name": "oimdb",
  "version": "1.3.0",
  "description": "DEPRECATED: This package has been split into @oimdb/core and @oimdb/dx. Please use the new packages instead.",
  "keywords": [
    "typescript",
    "library",
    "oim",
    "database",
    "oimdb",
    "state-management",
    "state-manager"
  ],
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "deprecated": "This package has been split into @oimdb/core and @oimdb/dx. Please use the new packages instead.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abaikov/oimdb.git"
  },
  "bugs": {
    "url": "https://github.com/abaikov/oimdb/issues"
  },
  "homepage": "https://github.com/abaikov/oimdb#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "build:core": "cd packages/core && npm run build",
    "build:react": "cd packages/react && npm run build",
    "build:snapshot-manager": "cd packages/snapshot-manager && npm run build",
    "bench": "tsx scripts/run-bench.ts",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts && eslint packages/core/src --ext .ts && eslint packages/react/src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix && eslint packages/core/src --ext .ts --fix && eslint packages/react/src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"packages/core/src/**/*.ts\" \"packages/react/src/**/*.ts\"",
    "clean": "rimraf dist packages/core/dist packages/react/dist",
    "install:packages": "cd packages/core && npm install && cd ../react && npm install",
    "publish:core": "cd packages/core && npm publish",
    "publish:react": "cd packages/react && npm publish",
    "publish:snapshot-manager": "cd packages/snapshot-manager && npm publish",
    "publish:all": "npm run publish:core && npm run publish:react"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@oimdb/core": "^1.0.0"
  },
  "author": "Andrei Baikov",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "^19.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.2.2"
  }
}
